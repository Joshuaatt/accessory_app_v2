<div class="page-header">
  <h1>Select your <%= @manufacturer.name %> model <small><%= link_to 'Add Model', new_manufacturer_model_path(@manufacturer, @model), id: "add_link" %></small></h1>
</div>

<% if @manufacturer.models.any? %>
  <ul class="list-container">
      <% @manufacturer.models.each do |model| %>
        <%= link_to manufacturer_model_path(@manufacturer, model) do %>
          <div class="model-cards col-md-12"
            <li>
              <div class="model-image col-md-2">
                <%= image_tag model.image.url(:thumb) %>
              </div>
              <div class="model-year-name">
                <div class="model-year col-md-2">
                  <%= model.year %>
                </div>
                <div class="model-name col-md-3">
                  <%= model.name %>
                </div>
              </div>
              <div class="admin-controls edit-model col-md-5">
                <%= link_to 'edit', edit_manufacturer_model_path(@manufacturer, model) %> | <%= link_to 'delete', manufacturer_model_path(@manufacturer, model), data: { confirm: "This will delete the model and all accessories associated with this model. Are you sure?", method: "delete" } %></li>
              </div>
            </li>
          </div>
        <% end %>
      <% end %>
  </ul>
<% end %>

<p class="btn return"><%= link_to 'Return to main page', manufacturers_path %></p>
